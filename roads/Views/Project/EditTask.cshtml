@using roads.ViewModels
@model TaskViewModel

<form class="container text-white-50" method="post" asp-action="EditTask">
    <h4>Редактирование задачи @Model.ProjectId</h4>
    <input type="hidden" asp-for="ProjectId" />
    <span asp-validation-for="ProjectId" class="text-danger"></span>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" type="text" class="form-control" id="" placeholder="Описание">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status">Статус</label>
        <input asp-for="Status" type="text" class="form-control" id="" placeholder="">
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Применить</button>
</form>
