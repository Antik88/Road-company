@model User

<form class="container text-white-50" method="post" asp-action="Login">
    <h4 class="mt-2">Войти</h4>
    <div style="width: 300px">
        <div class="form-group">
            <label asp-for="Login">Логин</label>
            <input asp-for="Login" type="text" class="form-control"
                   id="login" aria-describedby="" placeholder="Логин">
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" type="password" class="form-control"
                   id="password" aria-describedby="" placeholder="Пароль">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="mt-2 btn btn-outline-secondary">Войти</button>
    </div>
</form>
