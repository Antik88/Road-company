@model roads.ViewModels.ExpViewModel

<form class="container text-white-50" method="post" asp-action="AddExp">
    <div class="form-group">
        <h4 asp-for="id">Расходы</h4>
        <h4 asp-for="id">@Model.ProjectId: <dr/> @Model.ProjectName</h4>
    </div>

    <div class="form-group">
        <input asp-for="ProjectId" type="hidden" class="form-control" id="" placeholder="p_id">
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" type="text" class="form-control" id="" placeholder="Описание">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpenseDate">Дата</label>
        <input asp-for="ExpenseDate" type="date" class="form-control" id="" placeholder="Дата">
        <span asp-validation-for="ExpenseDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount">Затраты</label>
        <input asp-for="Amount" type="number" class="form-control" id="" placeholder="amount">
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>
