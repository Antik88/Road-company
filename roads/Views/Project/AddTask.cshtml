@model roads.ViewModels.TaskViewModel

<form class="container text-white-50" method="post" asp-action="AddTask">
    <div class="form-group">
        <h4 asp-for="id">@Model.ProjectId: <dr/> @Model.ProjectName</h4>
    </div>

    <div class="form-group">
        <input asp-for="ProjectId" type="hidden" class="form-control" id="" placeholder="p_id">
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" type="text" class="form-control" id="" placeholder="Описание">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Статус</label>
        <input asp-for="Status" type="text" class="form-control" id="" placeholder="Статус">
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>
